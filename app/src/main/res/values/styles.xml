<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryAccent</item>
    </style>

    <style name="AppTheme.NoActionBarFullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BlackShadow">
        <item name="android:shadowColor">@color/primary_black</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:padding">@dimen/padding_tiny</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="WhiteShadow">
        <item name="android:shadowColor">@color/primary_white</item>
        <item name="android:textColor">@color/primary_black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:padding">@dimen/padding_tiny</item>
        <item name="android:shadowRadius">6</item>
    </style>

</resources>
