<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        app:cardUseCompatPadding="true"
        android:layout_margin="@dimen/margin_tiny"
        android:layout_height="@dimen/profile_book_mark_height">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/iv_profile_book_mark_cover"
                android:src="@drawable/books_old_reading"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:contentDescription="@string/text_book_mark_cover"/>

        <TextView
                android:id="@+id/tv_profile_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/books_name"
                android:ellipsize="end"
                android:background="@color/colorPrimaryDarkTransparent"
                android:singleLine="true"
                android:layout_alignBottom="@+id/iv_profile_book_mark_cover"
                style="@style/BlackShadow"
                android:textSize="@dimen/text_large"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple"
                android:padding="@dimen/padding_medium_small"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>