<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginRight="@dimen/margin_tiny"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/iv_blog_post"
                android:src="@drawable/books_board_chalk_inscription_school"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="220dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="4"
                android:background="@color/colorPrimaryTransparent"
                android:layout_alignBottom="@id/iv_blog_post"
                android:layout_height="?attr/actionBarSize">

            <Button
                    android:id="@+id/btn_blog_post_comment"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding_medium_small"
                    android:text="65"
                    android:foreground="@drawable/ripple"
                    android:drawableLeft="@drawable/ic_comment_black_24dp"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent"/>

            <Button
                    android:id="@+id/btn_blog_post_like"
                    android:paddingLeft="@dimen/padding_medium_small"
                    android:text="34"
                    android:foreground="@drawable/ripple"
                    android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent"/>

            <Button
                    android:id="@+id/btn_blog_post_view"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:foreground="@drawable/ripple"
                    android:paddingLeft="@dimen/padding_medium_small"
                    android:drawableLeft="@drawable/ic_eye_black_24dp"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent"/>

            <Button
                    android:id="@+id/btn_blog_post_share"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/text_share"
                    android:textAllCaps="false"
                    android:foreground="@drawable/ripple"
                    android:paddingLeft="@dimen/padding_small"
                    android:drawableLeft="@drawable/ic_share_black_24dp"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <TextView
                android:id="@+id/tv_blog_post_owner"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_large"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/book_author_name"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginLeft="@dimen/margin_medium_small"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_below="@+id/iv_blog_post"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_blog_post_name"
                android:text="@string/books_name"
                android:layout_below="@id/tv_blog_post_owner"
                android:layout_alignLeft="@id/tv_blog_post_owner"
                android:paddingTop="@dimen/padding_small"
                android:textSize="@dimen/text_large"
                android:textColor="@color/primary_black"
                android:paddingRight="@dimen/padding_small"
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="@dimen/text_medium"
                android:text="@string/demo_text"
                android:layout_below="@id/tv_blog_post_name"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_alignLeft="@id/tv_blog_post_name"
                android:paddingRight="@dimen/padding_medium_small"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:lines="5"
                android:textColor="@color/primary_text"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="@dimen/padding_medium_small"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>