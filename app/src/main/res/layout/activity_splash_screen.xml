<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_centerInParent="true"
            android:id="@+id/cv_splash_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/iv_splash_screen"
                android:scaleType="centerCrop"
                android:src="@drawable/library"
                android:layout_width="@dimen/logo_width_and_size"
                android:layout_height="@dimen/logo_width_and_size"
                android:contentDescription="@string/text_app_logo"/>
    </android.support.v7.widget.CardView>

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:indeterminate="true"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorPrimaryDark"
            android:id="@+id/progressBar"
            android:layout_below="@id/cv_splash_screen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_medium"/>

</RelativeLayout>